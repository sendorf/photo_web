
<h1 class= "text-center"> Search for a vehicle photographs</h1>
<%= simple_form_for(@engine, :html => {:class => 'form-vertical' }) do |f| %>

<%= f.input :stock_ref, :label => 'Stock Reference',
							:label_html => { :class => 'col-md-offset-1' }, 
  						:input_html => {:class => 'col-md-offset-1'}%>
</br>
<%= f.input :registration, 
							:inline_label => false,
							:label_html => { :class => 'col-md-offset-1' }, 
  						:input_html => {:class => 'col-md-offset-1'}%>
</br>
<%= f.button  :submit, 'Search Photos',
							:class => 'col-md-offset-1 btn btn-warning' %>

<% end %>